<!doctype html>

<html lang="en">
<head>
  <meta charset="utf-8">

  <title>Recipe Book</title>


  <meta name="description" content="This is a Rails study">
  <meta name="author" content="@flaviojmendes">
  <!--[if lt IE 9]>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.3/html5shiv.js"></script>
  <![endif]-->
</head>

<body>

  <div class="container">
    <div class="row justify-content-md-center">
      <div class="col-xs-12">
        <h1>Recipes</h1>
      </div>
    </div>

    <div class="row justify-content-md-center">
      <div class="col-md-8">
        <ul class="list-group">
          <% @recipes.each do |recipe| %>
            <li class="list-group-item"><%= recipe.name %> </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</body>
</html>
